        <script src="js/form-validation.js"></script>
        <script>
          function proses(){
            var harga_barang = parseFloat (document.form.harga_barang.value);
            if(isNaN(harga_barang)){
              harga_barang =0.0;
            }

            var jumlah_barang = parseFloat(document.form.jumlah_barang.value);
            if(isNaN(jumlah_barang)){
              jumlah_barang = 0.0;
            }

            var diskon = parseFloat(document.form.diskon.value);

            var total = harga_barang*jumlah_barang;
            document.form.total_pembelian.value="Rp "+total;

            var diskon = harga_barang*0.1;
            document.form.diskon.value="Rp "+diskon;
            
            var total_bayar = total-diskon;
            document.form.total_bayar.value="Rp "+total_bayar;
          }
        </script>
