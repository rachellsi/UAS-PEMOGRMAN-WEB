      <script src="js/jquery-3.2.1.slim.min.js"></script>
      
     <script src="js/form-validation.js"></script>
        <script>
          function proses(){
            var jam_kerja = parseFloat (document.form.jam_kerja.value);
            
            var upah = parseFloat(document.form.upah.value);
            
            var jumlah_anak = parseFloat(document.form.jumlah_anak.value);

            var gaji = jam_kerja*upah;
            document.form.gaji.value="Rp "+gaji;

            var tunjAnak = gaji*0.1*jumlah_anak;
            document.form.tunjAnak.value="Rp "+tunjAnak;
            
            var total_gaji = gaji+tunjAnak;
            document.form.total_gaji.value="Rp "+total_gaji;
          }
        </script>
