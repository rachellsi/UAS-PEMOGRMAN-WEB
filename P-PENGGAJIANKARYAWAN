    <div class="col-md-8 order-md-1 card">
        <div class="card-body">
      <h4 class="mb-3">Form Penggajian Karyawan</h4>
      <form class="needs-validation" name="form">
        

        <div class="mb-3">
          <label >Nama Pegawai</label>
          <input type="text" class="form-control"  placeholder="SANDY MAULANA" required name="nama_pegawai">
        </div>

        
        <div class="mb-3">
          <label >Jam Kerja</label>
          <input type="text" class="form-control"  placeholder="10" required name="jam_kerja">
        </div>

        
        <div class="mb-3">
            <label >Upah Per-Jam</label>
            <input type="number" class="form-control"  placeholder="600000" required name="upah">
            
          </div>

          <div class="mb-3">
            <label >Jumlah Anak</label>
            <input type="number" class="form-control"  placeholder="3" required name="jumlah_anak">
            
          </div>


        <hr class="mb-4">

        <div class="mb-3">
          
            <a class="btn btn-success" onclick="proses()">Proses</a>
            <a href="" class="btn btn-danger">Reset</a>
          
        </div>
        <div class="mb-3">
          <label >Gaji</label>
          <input type="text" class="form-control" required readonly name="gaji">
          
        </div>
        
        <div class="mb-3">
          <label >Tunjangan Anak 10%</label>
          <input type="text" class="form-control" required readonly name="tunjAnak">
          
        </div>
        
        <div class="mb-3">
          <label >Total Gaji</label>
          <input type="text" class="form-control" required readonly name="total_gaji">
          
