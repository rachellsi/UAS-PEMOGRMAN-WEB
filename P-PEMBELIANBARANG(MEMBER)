         <script src="js/jquery-3.2.1.slim.min.js"></script>
           
             <script src="js/form-validation.js"></script>
             <script>
               function proses(){
                 var nama_barang =  (document.form.nama_barang.value);
                 
                 var jumlah_barang = parseFloat(document.form.jumlah_barang.value);
                 
                 var harga_total =0.0;
                 var harga_barang = 0.0;
                 var total =0.0;
     
                 if(nama_barang == "Speaker"){
                     harga_total = 1000000;
                 }else if(nama_barang == "CPU"){
                     harga_total = 3500000;
                 }else if(nama_barang == "RAM"){
                     harga_total = 2500000;
                 }else{
                     harga_total = 1500000;
                 }
     
                 var total = jumlah_barang*harga_total;
                 document.form.harga_barang.value = "Rp "+eval(harga_total);
                 document.form.total.value= "Rp "+eval(total);
               }
             </script>
