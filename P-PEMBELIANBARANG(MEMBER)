            <label >Total</label>
            <input type="text" class="form-control" required readonly name="total">
               
        </div>


        <hr class="mb-4">
     
         <div class="mb-3">
               
            <a class="btn btn-success" onclick="proses()">Proses</a>
            <a href="" class="btn btn-danger">Reset</a>
               
            </div>

